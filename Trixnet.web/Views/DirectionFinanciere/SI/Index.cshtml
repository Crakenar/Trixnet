                            <div class="row">
                                <div class="col-lg-12">
                                    <a href="~/DirectionFinanciere/SI/Help.cshtml" class="link-picto">
                                        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
